                <!-- studentid:<%= detail._id%><br><br> -->
                <div class="main_marksheet main">
                    <% if (detail.cart.items.length>0){%>
                        <div class="card2">
                            <% for(let data of detail.cart.items){%>
                                <!-- <div class="box card-body"> -->
                                <div class="card" style="width: 18rem;"> 
                                    <img src="/<%= data.marksheet%>" alt="" srcset="" id="imageBox1" onclick="resetImg(event)">
                                    <div class="card-body">
                                        <h5>
                                            Std: <%=data.std%>
                                        </h5>
                                        <p>
                                            Status: <%=data.result%>
                                        </p>
                                    </div>
                                </div>
                                <%}%>
                        </div>
                        <%}else{%>
                            <div class="card2">
                                <p style="text-align: center;">No marksheet ...</p>
                            </div>
                            <%}%>
